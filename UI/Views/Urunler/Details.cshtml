@model Tuple<UI.Models.DAL.Products, UI.Models.UI.SideBar>

@{
    ViewData["Title"] = Model.Item1.name + " Details";
    Layout = "_UX_Layout";
}
@section SideBar
{
    @Html.Partial("SideBar", Model.Item2)
}
<div class="card mt-4">
    <img class="card-img-top img-fluid" src="http://placehold.it/900x400" alt="">
    <div class="card-body">
        <h3 class="card-title">@Model.Item1.name</h3>
        @if (Model.Item1.is_in_camp)
        {
            <h4>@Model.Item1.camp_price</h4>
            <h4 style="color:crimson; text-decoration:line-through;">@Model.Item1.price</h4>
        }
        else
        {
            <h4>@Model.Item1.price</h4>
        }
        @if (Model.Item1.is_in_stock)
        {
            <h3 style="color:forestgreen;">Stok: @Model.Item1.quantity Adet</h3>
        }
        else
        {
            <h3 style="color:crimson;">Stokta Yok</h3>
        }
        <p class="card-text">@Model.Item1.desc</p>
        <span class="text-warning">&#9733; &#9733; &#9733; &#9733; &#9734;</span>
        4.0 stars
    </div>
</div>
<!-- /.card -->

